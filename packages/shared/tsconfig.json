{
  "extends": ["@nwlnexus/config/remix"],
  "compilerOptions": {
    "paths": {
      "@/": ["./src/"],
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types": ["./src/types.ts"],
      "@/ui/*": ["./src/ui/*"],
      "@/utils": ["./src/utils/index.ts"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
