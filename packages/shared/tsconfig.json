{
  "extends": ["@nwlnexus/config/react-library"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/lib/*": ["src/lib/*"],
      "@/assets/*": ["src/assets/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/styles/*": ["src/styles/*"],
      "@/types": ["src/types.ts"],
      "@/ui/*": ["src/ui/*"],
      "@/utils": ["src/utils.ts"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
