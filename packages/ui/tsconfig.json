{
	"extends": "@repo/config/typescript",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ES2022"],
		"jsx": "preserve",
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"paths": {
			"$lib": ["./src"],
			"$lib/*": ["./src/*"]
		}
	},
	"include": ["*.ts", "src"],
	"exclude": ["node_modules"]
}
