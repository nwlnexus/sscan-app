{
  "name": "@sscan/desktop",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "clean": "rm -rf .turbo node_modules",
    "dev": "remix vite:dev",
    "full:dev": "pnpm run tauri dev",
    "preview": "vite preview",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "start": "remix-serve ./build/server/index.js",
    "tauri": "tauri",
    "typecheck": "tsc --noEmit",
    "ui-add": "pnpm dlx shadcn@latest add",
    "ui-update": "pnpm dlx shadcn-ui@latest update",
    "ui-check": "pnpm dlx shadcn-ui@latest check"
  },
  "dependencies": {
    "@remix-run/node": "^2.12.0",
    "@remix-run/react": "^2.12.0",
    "@remix-run/serve": "^2.12.0",
    "@tauri-apps/plugin-deep-link": "^2.0.0-rc.2",
    "@tauri-apps/plugin-fs": "^2.0.0-rc.2",
    "@tauri-apps/plugin-process": "^2.0.0-rc.1",
    "@tauri-apps/plugin-shell": "^2.0.0-rc.1",
    "@tauri-apps/plugin-store": "^2.0.0-rc.1",
    "isbot": "^5.1.17",
    "lucide-react": "^0.439.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@nwlnexus/config": "^1.1.3",
    "@remix-run/dev": "^2.12.0",
    "@repo/tailwind": "workspace:*",
    "@tauri-apps/cli": "2.0.0-rc.12",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "vite": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
