{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["API_URL"],
      "outputs": [
        ".svelte-kit/**",
        "dist/**",
        "build/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "full:dev": {
      "persistent": true,
      "cache": false
    },
    "@sscan/desktop#tauri:dev": {
      "persistent": true,
      "dependsOn": ["db:push"]
    },
    "@sscan/desktop#dev": {
      "persistent": true,
      "dependsOn": ["db:push"]
    },
    "@sscan/web#dev": {
      "persistent": true,
      "dependsOn": ["^db:migrate"]
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "interactive": true,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": true,
      "outputs": [],
      "env": ["DATABASE_URL"],
      "dependsOn": ["db:generate"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "db:up": {
      "cache": false,
      "interactive": true,
      "env": ["DATABASE_URL"]
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "AUTH_DISCORD_ID",
    "AUTH_DISCORD_SECRET",
    "AUTH_REDIRECT_PROXY_URL",
    "AUTH_SECRET",
    "API_URL",
    "PORT"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "npm_lifecycle_event"
  ]
}